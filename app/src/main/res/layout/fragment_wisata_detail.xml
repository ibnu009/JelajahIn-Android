<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.wisata.WisataDetailFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarCoor"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/green"
            android:background="@color/green"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">

            <ImageView
                android:id="@+id/imgWisata"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolBar"
                app:navigationIcon="@drawable/ic_arrow_back"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/content"
        android:layout_marginTop="-25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_content"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:id="@+id/llContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWisataName"
                style="@style/JelajahinTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_double"
                android:layout_marginTop="@dimen/space_quintuple"
                tools:text="Kawah Ijen" />

            <TextView
                android:id="@+id/tvWisataLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_double"
                android:layout_marginTop="@dimen/space"
                app:drawableStartCompat="@drawable/ic_location"
                tools:text="Bondowoso, Jawa Timur" />

            <TextView
                android:id="@+id/tvWisataDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_double"
                android:layout_marginTop="@dimen/space_double"
                android:ellipsize="end"
                android:maxLines="4"
                tools:text="@tools:sample/lorem/random" />

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/space_double"
                android:showDividers="middle"
                android:divider="@drawable/vertical_divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginStart="@dimen/space_double"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvWisataRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green_button"
                        android:textSize="@dimen/font_xxbig"
                        android:textStyle="bold"
                        tools:text="4,2" />

                    <TextView
                        android:id="@+id/tvWisataAccreditation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space"
                        android:layout_toEndOf="@id/tvWisataRating"
                        android:textStyle="bold"
                        android:textColor="@color/blackTitle"
                        tools:text="Luar Biasa" />

                    <RatingBar
                        android:id="@+id/wisataStar"
                        style="@style/customRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvWisataAccreditation"
                        android:layout_marginStart="6dp"
                        android:layout_toEndOf="@id/tvWisataRating"
                        android:numStars="5"
                        android:rating="4.5" />


                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/harga_tiket"
                        android:layout_marginStart="@dimen/space"
                        android:textStyle="bold"
                        android:textColor="@color/blackTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvTicketPrice"
                        tools:text="Rp 20.000"
                        android:layout_marginStart="@dimen/space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="@string/harga_tiket_weekend"
                        android:layout_marginStart="@dimen/space"
                        android:textStyle="bold"
                        android:textColor="@color/blackTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvTicketPriceWeekend"
                        tools:text="Rp 25.000"
                        android:layout_marginStart="@dimen/space"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iconChat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/space_double"
                        android:src="@drawable/ic_chat" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/space"
                        android:layout_toEndOf="@id/iconChat"
                        android:text="@string/pendapat_pengunjung"
                        android:textColor="@color/blackTitle"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnLihatWisata"
                        style="@style/JelajahinTextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/space_double"
                        android:text="@string/semua_ulasan"
                        android:textAllCaps="false"
                        android:textColor="@color/green_button"
                        android:textSize="@dimen/font_medium"
                        android:textStyle="bold" />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvUlasan"
                    tools:listitem="@layout/ulasan_item"
                    tools:itemCount="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_double" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_triple"
        android:backgroundTint="@color/white"
        android:baselineAlignBottom="false"
        android:clickable="true"
        android:contentDescription="aweaw"
        android:layout_gravity="top"
        android:layout_marginTop="@dimen/space"
        app:layout_anchorGravity="end|bottom"
        android:focusable="true"
        android:src="@drawable/ic_bookmark"
        app:fabSize="normal"
        app:layout_anchor="@id/appBarCoor"
        app:tint="#989898" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>