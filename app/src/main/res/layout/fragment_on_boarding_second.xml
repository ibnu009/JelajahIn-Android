<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.onboarding.OnBoardingFirstFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_quadruple"
            android:src="@drawable/onboardingsecond" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_quintuple"
            android:text="@string/onboarding_second_title"
            android:textAlignment="center"
            android:textColor="@color/blackTitle"
            android:textSize="@dimen/font_xbig"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_triple"
            android:layout_marginTop="@dimen/space"
            android:text="@string/onboarding_second_desc"
            android:textAlignment="center"
            android:textColor="@color/blackTitle"
            android:textSize="@dimen/font_xmedium" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_double"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/circle1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="@dimen/space"
                android:background="@android:color/transparent"
                android:src="@drawable/circle"
                app:tint="@color/green_button" />

            <ImageButton
                android:id="@+id/circle2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/space"
                android:background="@android:color/transparent"
                android:src="@drawable/circle"
                app:tint="@color/green_button" />

            <ImageButton
                android:id="@+id/circle3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/space"
                android:background="@android:color/transparent"
                android:src="@drawable/circle"
                app:tint="@color/grey_500" />

            <ImageButton
                android:id="@+id/circle4"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/space"
                android:background="@android:color/transparent"
                android:src="@drawable/circle"
                app:tint="@color/grey_500" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/space"
        android:layout_marginTop="@dimen/space"
        android:layout_marginEnd="@dimen/space"
        android:layout_marginBottom="@dimen/space"
        android:background="@android:color/transparent"
        android:text="@string/next"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnPrev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/space"
        android:layout_marginTop="@dimen/space"
        android:layout_marginEnd="@dimen/space"
        android:layout_marginBottom="@dimen/space"
        android:background="@android:color/transparent"
        android:text="Previous"
        android:textColor="@color/black"
        android:textStyle="bold" />

</RelativeLayout>