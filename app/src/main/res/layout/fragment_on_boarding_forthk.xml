<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_quadruple"
            android:src="@drawable/onboardingforth" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_quintuple"
            android:text="@string/onboarding_third_title"
            android:textAlignment="center"
            android:textColor="@color/blackTitle"
            android:textSize="@dimen/font_xbig"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_triple"
            android:layout_marginTop="@dimen/space"
            android:text="@string/onboarding_third_desc"
            android:textAlignment="center"
            android:textColor="@color/blackTitle"
            android:textSize="@dimen/font_xmedium" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_double"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/circle1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="@dimen/space"
                android:background="@android:color/transparent"
                android:src="@drawable/circle"
                app:tint="@color/green_button" />

            <ImageButton
                android:id="@+id/circle2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/space"
                android:background="@android:color/transparent"
                android:src="@drawable/circle"
                app:tint="@color/green_button" />

            <ImageButton
                android:id="@+id/circle3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/space"
                android:background="@android:color/transparent"
                android:src="@drawable/circle"
                app:tint="@color/green_button" />

            <ImageButton
                android:id="@+id/circle4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/space"
                android:background="@android:color/transparent"
                android:src="@drawable/circle"
                app:tint="@color/green_button" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/space_triple"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="@dimen/space_double"
        android:background="@drawable/bg_button"
        android:padding="10dp"
        android:text="@string/start_journey"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:backgroundTint="@null" />

</RelativeLayout>