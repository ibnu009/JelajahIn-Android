<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/space_triple"
    app:cardCornerRadius="@dimen/space_triple"

    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/green_light"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imvItem"
            android:layout_centerInParent="true"
            android:layout_width="225dp"
            android:layout_height="225dp"/>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/space_triple"
            android:layout_marginHorizontal="@dimen/space_triple"
            android:background="@drawable/bg_category_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvProductName"
                tools:text="ITEM 1"
                android:textSize="@dimen/font_xmedium"
                android:layout_marginHorizontal="@dimen/space"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvPrice"
                tools:text=" 20.000"
                android:layout_marginTop="@dimen/space"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_point"
                android:layout_marginHorizontal="@dimen/space"
                android:textSize="@dimen/font_medium"
                android:textColor="@color/dusk_yellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>